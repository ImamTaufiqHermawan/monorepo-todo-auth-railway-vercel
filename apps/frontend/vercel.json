{
  "version": 2,
  "git": {
    "deploymentEnabled": {
      "main": false
    }
  },
  "buildCommand": "pnpm --filter @todo/frontend run build",
  "outputDirectory": "apps/frontend/dist",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
