{
  "name": "@todo/backend",
  "version": "1.0.0",
  "description": "Todo API backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "build": "mkdir -p dist && echo 'No build step needed for Node.js' > dist/.build-complete",
    "start": "node src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --verbose --runInBand",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit --coverage --runInBand",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "echo 'Linting not configured'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.0",
    "serverless-http": "^3.2.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
